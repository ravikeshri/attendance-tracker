<%- include("../partials/header") %>
<%- include("../partials/navbar") %>

      <div class="container">
        <div class="row card-container">
            <div class="card-box join-class">
                <form action="/student/class/join" method="POST">
                  <h3>Join Class</h3>
                  <%- include("../partials/messages") %>
                  <div class="form-outline mb-3 mt-3">
                    <input type="text" id="class-code" name="code" class="form-control" required />
                    <label class="form-label" for="class-code">Joining Code</label>
                  </div>
                  <button type="submit" class="btn btn-primary btn-block">JOIN</button>
                </form>
            </div>

            <% classes.forEach(cls => { %>
              <div onclick="location.href='/student/class/'+'<%= cls.cls._id %>';" class="card-box">
                <h4> <%= cls.cls.name %>  </h4>
                <h6> Code: <%= cls.cls.code %>  </h6>
                <h5> <%= cls.att.toFixed(2) %>%</h5>
              </div>
            <% }) %>
        </div>
      </div>

    <!-- MDB -->
    <script
    type="text/javascript"
    src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.2.0/mdb.min.js"
    ></script>

<%- include("../partials/footer") %>